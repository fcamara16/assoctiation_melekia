{% extends 'base.html.twig' %}

{% block title %}Collecte index{% endblock %}

{% block body %}
    <h1>Collecte index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Date</th>
                <th>Image</th>
                <th>Description</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for collecte in collectes %}
            <tr>
                <td>{{ collecte.id }}</td>
                <td>{{ collecte.date ? collecte.date|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ collecte.image }}</td>
                <td>{{ collecte.description }}</td>
                <td>
                    <a href="{{ path('app_collecte_show', {'id': collecte.id}) }}">show</a>
                    <a href="{{ path('app_collecte_edit', {'id': collecte.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_collecte_new') }}">Create new</a>
{% endblock %}
